<!doctype html>
<html ng-app>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Register</title>
    <link rel="stylesheet" href="http://lib.sinaapp.com/js/bootstrap/latest/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://lib.sinaapp.com/js/bootstrap/latest/css/bootstrap-responsive.min.css">
    <link href='http://fonts.googleapis.com/css?family=Wendy+One' rel='stylesheet' type='text/css'>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js"></script>
    <script type="text/javascript" src="/javascripts/util.js"></script>
    <script type="text/javascript" src="/javascripts/client-register.js"></script>

    <link rel="stylesheet/less" type="text/css" href="/less/register.less">
    <link rel="stylesheet/less" type="text/css" href="/less/logo.less">
    <script type="text/javascript" src="/javascripts/less-1.3.3.min.js"></script>

  </head>
  <body>
    <article class="container register-panel">
      <header class="row">
        <a href="<%= link_login%>" class="btn btn-success btn-right">Login</a>
      </header>
      <section class="row register-main">
        <div class="span3"></div>

        <nav class="span3 logo">
          <h2 class="logo-title">GPC</h2>
          <p class="logo-desc">Vote favorates</p>
        </nav>

        <div class="span4 register-main">
          <form ng-controller="RegisterCtrl" class="register-form">
            <fieldset>
              <legend>Register</legend>
              <label>Username</label>
              <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <input type="text" ng-model="user.username" ng-mousedown="clean()">
              </div>
              <label>Password</label>
              <div class="input-prepend">
                <span class="add-on"><i class="icon-lock"></i></span>
                <input type="password" ng-model="user.password" ng-mousedown="clean()">
              </div>
              <label>Repeat Password</label>
              <div class="input-prepend">
                <span class="add-on"><i class="icon-repeat"></i></span>
                <input type="password" ng-model="user.repassword" ng-mousedown="clean()">
              </div>
              <label>Email</label>
              <div class="input-prepend">
                <span class="add-on"><i class="icon-envelope"></i></span>
                <input type="text" ng-model="user.email" ng-mousedown="clean()">
              </div>
              <button type="submit" class="btn btn-primary register-btn" ng-click="submit(user)">Submit</button>

              <label class="alert alert-error register-error" ng-show="isError">{{error}}</label>
            </fieldset>
          </form>
        </div>
      </section>
      <footer class="register-footer">
        <span>@2013 Leo Burnette</span>
        <span>-</span>
        <a href="#">Leo Burnette</a>
      </footer>
    </article>
  </body>
</html>