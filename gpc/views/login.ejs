<!doctype html>
<html ng-app>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-responsive.min.css">
    <link href='http://fonts.googleapis.com/css?family=Wendy+One' rel='stylesheet' type='text/css'>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js"></script>
    <script type="text/javascript" src="/javascripts/client-login.js"></script>

    <link rel="stylesheet/less" type="text/css" href="/less/login.less">
    <link rel="stylesheet/less" type="text/css" href="/less/logo.less">
    <script type="text/javascript" src="/javascripts/less-1.3.3.min.js"></script>

  </head>
  <body>
    <article class="container login-panel">
      <header class="row">
        <a href="<%= link_register%>" class="btn btn-success btn-right">Register</a>
      </header>
      <section class="row login-main">
        <div class="span3"></div>

        <nav class="span3 logo">
          <h2 class="logo-title">GPC</h2>
          <p class="logo-desc">Vote favorates</p>
        </nav>
        <div class="span4">
          <form ng-controller="LoginCtrl" class="login-form">
            <fieldset>
              <legend>Login</legend>
              <label>Username</label>
              <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <input type="text" ng-model="user.username" ng-mousedown="clean()">
              </div>
              <label>Password</label>
              <div class="input-prepend">
                <span class="add-on"><i class="icon-lock"></i></span>
                <input type="password" ng-model="user.password" ng-mousedown="clean()">
              </div>
              <div class="control-group">
                <div class="controls">
                  <label class="checkbox">
                    <input type="checkbox"> 
                    <span>Remember me -- </span>
                    <a href="#">Forget password</a>
                  </label>
                  <button type="submit" class="btn btn-primary login-btn" ng-click="submit(user)">Sign in</button>
                </div>
              </div>
              <label class="alert alert-error login-error" ng-show="isError">{{error}}</label>
            </fieldset>
          </form>
        </div>

        <div class="span2"></div>
      </section>
      <footer class="login-footer">
        <span>@2013 Leo Burnette</span>
        <span>-</span>
        <a href="#">Leo Burnette</a>
      </footer>
    </article>
  </body>
</html>