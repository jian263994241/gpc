<!doctype html>
<html ng-app>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Vote</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-responsive.min.css">
    <link href='http://fonts.googleapis.com/css?family=Wendy+One' rel='stylesheet' type='text/css'>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js"></script>
    <script type="text/javascript" src="/javascripts/director.js"></script>

    <link rel="stylesheet/less" type="text/css" href="/less/vote.less">
    <link rel="stylesheet/less" type="text/css" href="/less/logo.less">
    <link rel="stylesheet/less" type="text/css" href="/less/timer.less">
    <script type="text/javascript" src="/javascripts/less-1.3.3.min.js"></script>

  </head>
  <body>
    <article class="container" ng-controller="DirectorCtrl" ng-init="init()">
      <section class="row">
        <nav class="span3">
          <div class="logo logo-brand">
            <h2 class="logo-title">GPC</h2>
            <p class="logo-desc">Vote favorates</p>
          </div>
          
          <ul class="nav nav-tabs nav-stacked">
            <li><a href="#" ng-click="prev()">Previous</a></li>
            <li><a href="#" ng-click="next()">Next</a></li>
          </ul>
          <div>
            <a href="#" class="btn" ng-click="start()" ng-show="!isStart">Start Voting</a>
            <a href="#" class="btn" ng-click="end()" ng-show="isStart">End Voting</a>
          </div>
          <div ng-show="isStart">
            <h4>Timmer</h4>
            <h6 class="timer">{{time}}s</h6>
          </div>
        </nav>
        <div class="span9">
          <h2 class="page-header">
            <em class="vote-name">{{project.name}}</em>
          </h2>
          <h3>
            <span>Candidate - </span>{{candidate.title}}</span>
          </h3>
          <p>
            <strong>Author - </strong>
            <span>{{candidate.author}}</span>
          </p>
          <div>
            <strong>Product</strong>
            <img src="{{candidate.source}}" alt="" ng-show="isImage">
            <video src="{{candidate.source}}" alt="" ng-show="isVideo">
          </div>
          <p><strong>Introduction</strong></p>
<pre>{{candidate.intro}}</pre>
        </div>
      </section>
    </article>
  </body>
</html>