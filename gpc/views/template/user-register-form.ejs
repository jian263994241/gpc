<script type="text/javascript" src="/javascripts/util.js"></script>
<script type="text/javascript" src="/javascripts/client-register.js"></script>
<form ng-controller="RegisterCtrl" class="register-form">
  <fieldset>
    <legend>Register</legend>
    <label>Username</label>
    <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
      <input type="text" ng-model="user.username" ng-mousedown="clean()">
    </div>
    <label>Password</label>
    <div class="input-prepend">
      <span class="add-on"><i class="icon-lock"></i></span>
      <input type="password" ng-model="user.password" ng-mousedown="clean()">
    </div>
    <label>Repeat Password</label>
    <div class="input-prepend">
      <span class="add-on"><i class="icon-repeat"></i></span>
      <input type="password" ng-model="user.repassword" ng-mousedown="clean()">
    </div>
    <label>Email</label>
    <div class="input-prepend">
      <span class="add-on"><i class="icon-envelope"></i></span>
      <input type="text" ng-model="user.email" ng-mousedown="clean()">
    </div>
    <button type="submit" class="btn btn-primary register-btn" ng-click="submit(user)">Submit</button>

    <label class="alert alert-error register-error" ng-show="isError">{{error}}</label>
  </fieldset>
</form>