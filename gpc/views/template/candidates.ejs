<!doctype html>
<html ng-app>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Management</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-responsive.min.css">
    <link href='http://fonts.googleapis.com/css?family=Wendy+One' rel='stylesheet' type='text/css'>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js"></script>
    <script type="text/javascript" src="/javascripts/client-candidate-manage.js"></script>

    <link rel="stylesheet/less" type="text/css" href="/less/login.less">
    <link rel="stylesheet/less" type="text/css" href="/less/logo.less">
    <script type="text/javascript" src="/javascripts/less-1.3.3.min.js"></script>

    <script type="text/javascript" src="/javascripts/jquery-1.9.0.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>

  </head>
  <body ng-controller="CandidateManageCtrl" ng-init="init()">
    <article class="container">
      <section class="row">
        <div class="page-header">
          <h2>
            <span>Management</span>
            <div class="btn-group">
              <a href="/management/project" class="btn">Project</a>
              <a href="/management/candidate" class="btn active">Candidate</a>
            </div>
            <div class="btn-group">
              <button href="#candidate-modal" role="button" class="btn" data-toggle="modal">New Candidate</button>
              <button class="btn" ng-click="refresh()">Refresh</button>
            </div>
            <a href="/mangement/logout" class="btn pull-right">Logout</a>
          </h2>
        </div>
        <div id="candidate-list">
          <h4>Candidate List</h4>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>title</th>
                <th>auth</th>
                <th>type</th>
                <th>source</th>
                <th>introduction</th>
                <th>option</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="candidate in candidates">
                <td>{{candidate.title}}</td>
                <td>{{candidate.author}}</td>
                <td>{{candidate.type}}</td>
                <td>{{candidate.source}}</td>
                <td>{{candidate.intro}}</td>
                <td>
                  <a href="" class="btn" ng-click="delete(candidate)"><i class="icon icon-remove"></i>Delete</a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </section>

    </article>

    <div id="candidate-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="candidate-modal-label" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="candidate-modal-label">New Candidate</h3>
      </div>
      <div class="modal-body">
        <form>
            <label for="">Candidate title</label>
            <input type="text" ng-model="candidate.title" class="span4" required>
            <label for="">Author</label>
            <input type="text" ng-model="candidate.author" class="span4" required>
            <label for="">Source type</label>
            <input type="text" ng-model="candidate.type" class="span4" required>
            <label for="">Source</label>
            <input type="text" ng-model="candidate.source" class="span4" required>
            <label for="">Introduction</label>
            <textarea cols="30" rows="3" ng-model="candidate.intro" class="span4" required></textarea>
          </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" type="submit" ng-click="save()">Save</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
  </body>
</html>